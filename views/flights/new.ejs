<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<form id="new-form" action="/flights" method="POST">
  <label>Airline: <input type="text" name="airline" /> </label><br />
  <label>Airport:
    <select name="airport">
      <option value="DEN">DEN</option>
      <option value="ATL">ATL</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX </option>
      <option value="SAN">SAN</option>
    </select> </label><br />
  <label>Flight Number: <input type="number" name="flightNo" /> </label><br />
  <label for="date">Date: <input type="datetime-local" name="departs" checked /> </label><br />
  <input type="submit" value="Submit" />
</form>

